<%- include('layout/header') %>
    <div class="container w-50 mt-5 mb-5 rounded" style="background-color: rgb(237, 243, 242);">
        <div class="row">

            <h1 class="text-center mb-4 bg-primary text-light">Add New User</h1>
            <div class="container">
                <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="tel" name="phone" class="form-control" id="phone" placeholder="Enter phone">
                    </div>
                    <div class="form-group">
                        <label for="image">Select Image:</label>
                        <input type="file" class="form-control" name="image" id="image">
                    </div>
                    <input type="submit" class="btn btn-primary btn-lg mt-3 mb-5 w-100" value="Add User">

                 </form>
            </div>


        </div>
    </div>
    <%- include('layout/footer') %>