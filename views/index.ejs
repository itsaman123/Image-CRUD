<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert mt-1 alert-dismissible fade show alert-<%= message.type %>" role="alert" id="alertMessage">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
                <script>
                    setTimeout(function() {
                        document.getElementById('alertMessage').classList.add('fade-out');
                    }, 2000);
                </script>
            <% } %>
            
            
            <div class="table-responsive">
                <% if (users!='') { %>
                 
                
                <table class="table table-striped mt-2" id="myTable">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var row = 0; row < users.length; row++){ %>
                        <tr class="align-middle">
                            <td><%= row %></td>
                            <td><img src="<%= users[row].image %>" width="50" class="img-thumbnail"></td>
                            <td><%= users[row].name %></td>
                            <td><%= users[row].email %></td>
                            <td><%= users[row].phone %></td>
                            <td>
                                <a href="/edit/<%= users[row]._id %>" class="btn-success btn-sm"><i class="fa-solid fa-pen-to-square"></i></a> &nbsp;  &nbsp; 
                                <a href="/delete/<%= users[row]._id %>" class="btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <% } else{%>
                    <h1 class="text-center text-secondary mt-5"> No Users found in the database</h1>

                    <% } %>
            </div>
         </div>
    </div>
</div>
<%- include('layout/footer') %>
